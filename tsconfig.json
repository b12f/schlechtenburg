{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": [ "esnext", "dom" ],
    "plugins": [ { "name": "@vuedx/typescript-plugin-vue" } ],
    "resolveJsonModule": true,
//    "noErrorTruncation": true,
    "paths": {}
  },
  "include": [ "lib/**/*.ts", "lib/**/*.d.ts", "lib/**/*.tsx", "lib/**/*.vue" ]
}
