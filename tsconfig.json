{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "lib": [ "esnext", "dom" ],
    "plugins": [ { "name": "@vuedx/typescript-plugin-vue" } ],
    "resolveJsonModule": true,
//    "noErrorTruncation": true,
    "paths": {}
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "packages/**/lib/**/*.ts",
    "packages/**lib/**/*.d.ts",
    "packages/**lib/**/*.tsx",
    "packages/**lib/**/*.vue"
  ]
}
